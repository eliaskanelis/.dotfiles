################################################################################
# Add an "alert" alias for long running commands.  Use like so:
#   sleep 10; alert
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

################################################################################
# General
alias tree='tree --dirsfirst -C'
alias dmesg='dmesg --color=auto --reltime --human --nopager --decode'
alias free='free -mht'

################################################################################
# Standard emacs
alias emacs="emacs-27.2"

alias e="emacsclient -t -create-frame --alternate-editor="
alias em="emacsclient -create-frame --alternate-editor="

################################################################################
# System

alias install="sudo apt-get install"
alias update="sudo apt-get update && sudo apt-get upgrade"

################################################################################
# ZSH
alias zshconfig="e ~/.zshrc"

################################################################################
# Bash
alias bashconfig="e ~/.bashrc"

################################################################################
# Virtual environment
alias virt="virtualenv -p python3 .venv"

################################################################################
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'

# ls
alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias lsa='ls -lah'

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

################################################################################
# Tools
alias copy="rsync -avrxHAX --progress"
alias pgrep="ps -aux | grep"
alias ccat="highlight --force --out-format=ansi"

alias setclip="xclip -selection c"
alias getclip="xclip -selection c -o"

alias webGet="wget --random-wait -r -p -e robots=off -U mozilla "

alias weather="curl v2.wttr.in/thessaloniki"
alias moon="curl wttr.in/Moon"

alias speak="espeak -g 10 -k 20 -s 150 -p -1 -ven+f4 "

alias py3="python3"
alias py2="python2"

################################################################################
# Updatedb
alias myupdatedb="updatedb --require-visibility 0 -o ${HOME}/.mlocate.db -U ${HOME} -v"
alias mylocate='locate --database="${HOME}/.mlocate.db"'
