! URxvt Appearance

! Fonts
URxvt.font:           xft:SourceCodePro+Powerline+Awesome Regular:style=Regular:size=10:antialias=true:hinting=true:minspace=true
URxvt.boldFont:       xft:SourceCodePro+Powerline+Awesome Regular:style=Regular:size=10:antialias=true:hinting=true:minspace=true
URxvt.italicFont:     xft:SourceCodePro+Powerline+Awesome Regular:style=Regular:size=10:antialias=true:hinting=true:minspace=true
URxvt.boldItalicfont: xft:SourceCodePro+Powerline+Awesome Regular:style=Regular:size=10:antialias=true:hinting=true:minspace=true

URxvt.letterSpace: 1
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 2
URxvt.cursorBlink: true
URxvt.cursorUnderline: true
URxvt.saveline: 2048
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 32
URxvt.iso14755: false
URxvt.transparent: false

! Disable screen printing by overriding the default print pipe.
URxvt.print-pipe: "cat >/dev/null"

! Copy paste
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Control-Meta-c:  builtin-string:
URxvt.keysym.Control-Meta-v:  builtin-string:

! Font resize
URxvt.keysym.Control-equal: font-size:increase
URxvt.keysym.Control-minus: font-size:decrease
URxvt.keysym.Control-0:     font-size:reset

!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
! Rofi

rofi.terminal:          urxvt
rofi.ssh-client:        ssh
rofi.ssh-command:       {terminal} -e {ssh-client} {host}
rofi.run-command:       {cmd}
rofi.run-shell-command: {terminal} -e {cmd}
