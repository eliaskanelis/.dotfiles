[user]
	email = hkanelhs@yahoo.gr
	name = tedi
[core]
	editor = emacsclient -t -create-frame --alternate-editor=
	quotepath = false
[diff]
	prompt = false
	tool = meld
[merge]
	tool = meld
	conflictstyle = diff3
[alias]

	lg = log --abbrev-commit --name-status --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	l = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	s   = status -s
	st  = status
	co  = checkout
	ci  = commit -v
	br  = branch
	dt  = difftool --dir-diff
	d   = diff -w --color-words
[mergetool]
	prompt = false
[web]
	browser = firefox
[instaweb]
	port = 4000
	browser = firefox
