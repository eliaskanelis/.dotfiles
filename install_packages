#!/usr/bin/env bash

# ------------------------------------------------------------------------------
# Terminal
sudo apt-get install -y rxvt-unicode-256color
sudo apt-get install -y tmux

# ------------------------------------------------------------------------------
# System tools
sudo apt-get install -y sxhkd
sudo apt-get install -y stow
sudo apt-get install -y parted
sudo apt-get install -y gparted
sudo apt-get install -y dunst
sudo apt-get install -y rofi
sudo apt-get install -y neofetch
sudo apt-get install -y feh
sudo apt-get install -y imagemagick
sudo apt-get install -y virtualenv
sudo apt get install -y alsa-utils
sudo apt-get install -y compton
sudo apt-get install -y xdotool
sudo apt-get install -y ffmpeg

sudo apt-get install -y scrot
sudo apt-get install -y flameshot

# ------------------------------------------------------------------------------
# Window manager
# i3
sudo apt-get install -y i3
sudo apt-get install -y i3-wm
sudo apt-get install -y i3blocls
sudo apt-get install -y i3status
sudo apt-get install -y i3lock-fancy
pip3 install --user i3ipc

# bspwm
sudo apt get install -y bspwm
sudo apt get install -y lemonbar
sudo apt get install -y trayer
sudo apt get install -y xdo

# ------------------------------------------------------------------------------
# Emacs
sudo apt-get install -y emacs

# ------------------------------------------------------------------------------
# Filemanager

# Ranger
sudo apt-get install -y ranger

# Thunar
sudo apt-get install -y thunar
sudo apt-get install -y thunar-data
sudo apt-get install -y thunar-gtkhash
sudo apt-get install -y thunar-archive-plugin
sudo apt-get install -y thunar-media-tags-plugin
sudo apt-get install -y thunar-volman
