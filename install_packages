sudo apt-get install -y virtualbox-guest-additions-iso

# ------------------------------------------------------------------------------
# Hugo
sudo apt-get install -y hugo
sudo apt-get install -y python3-pygments


# ------------------------------------------------------------------------------
# crontab
sudo apt-get install -y cron
